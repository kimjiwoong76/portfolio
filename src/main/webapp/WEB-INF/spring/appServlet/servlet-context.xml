	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>


	<context:component-scan
		base-package="com.jw.shop" />
	<mvc:annotation-driven></mvc:annotation-driven>
	<mvc:default-servlet-handler />
	<!-- location : 물리적 주소 / mapping : 가상 주소 -->
	<mvc:resources mapping="/resources/**"
		location="/resources/" />
	<mvc:resources mapping="/resources/upload/**"
		location="C:\jsp\spring\spring_project\jw\src\main\webapp\resources\upload\thumb" />
	<mvc:resources mapping="/jw/images/**"
		location="C:/upload/" />
	<mvc:resources location="/resources/intro/img/" mapping="img/**"/>
